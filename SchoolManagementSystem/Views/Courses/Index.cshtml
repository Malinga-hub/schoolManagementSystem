
@using SchoolManagementSystem.Models;
@{
    ViewData["title"] = "courses";
    var departmentSelectionList = ViewData["departmentSelectionList"] as List<SelectListItem>;
    DepartmentModel departmentModel = new DepartmentModel();
}

<div class="container">

@*courses and selector*@
    <div class="row">
        <div class="col">
            <button class="btn btn-outline-primary">+Add Course</button>
        </div>
        <div class="col">
            @using (Html.BeginForm("Index", "Courses", FormMethod.Post, new { @class=""}))
            {
            <div class="form-row">
                <div class="col-md-8 mb-2">
                    @Html.DropDownListFor(m=>departmentModel.Id, departmentSelectionList, "Select department", new { @class="form-control"})
                </div>
                <div class="col-md-4">
                    <button class="btn btn-outline-secondary btn-block" type="submit" onclick="loadViewSpinner()">
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true" id="filterBtnSpinner" style="display: none;"></span>
                        <span>Filter</span>
                    </button>
                </div>
            </div>
            }
            
        </div>
    </div>
    <hr />

@*courses table grouped by department*@
<div class="row animate-bottom" id="pageContent">
    @for (int i = 0; i < 5; i++)
    {
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header">
                    <span class="text-white">Title</span>
                </div>
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
                        <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></footer>
                    </blockquote>
                </div>
            </div>
        </div>
    }

</div>

<center>
    <div id="pageLoader" style="display: none">
    </div>
</center>


</div>

@section scripts{

<script>
    function loadViewSpinner() {
        $("#pageContent").hide()
        $("#pageLoader").show()
        $("#filterBtnSpinner").show()
    }
</script>    
} 

